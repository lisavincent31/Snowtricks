{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container mt-5 vh-100">
    <div class="row p-4">
        <h1 class="text-center text-uppercase">Bonjour {{ user.username }}</h1>
        <h4 class="text-center">Bienvenue sur votre compte</h4>
    </div>
    <div class="row justify-content-evenly mt-4 p-4">
        <div class="col-3">
            <a class="btn btn-primary w-100" href="dashboard/account">Mes Infos</a>
        </div>
        <div class="col-3">
            <button class="btn btn-outline-primary w-100">Mes Articles</button>
        </div>
        <div class="col-3">
            <button class="btn btn-outline-primary w-100">Mes Commentaires</button>
        </div>
    </div>

    <div class="row mt-4 p-4">
        <form class="container" id="form-update">
            <div class="row flex-nowrap justify-content-center align-items-center form-group mb-3">
                <label for="avatar" class="col-3">Avatar</label>
                <div class="col-6">
                    <input type="file" name="avatar" id="avatar" value="{{user.avatar}}" class="form-control"/>
                </div>
            </div>

            <div class="row flex-nowrap justify-content-center align-items-center form-group mb-3">
                <label for="username" class="col-3">Username</label>
                <div class="col-6">
                    <input type="text" name="username" id="username" value="{{user.username}}" class="form-control"/>
                </div>
            </div>

            <div class="row flex-nowrap justify-content-center align-items-center form-group mb-3">
                <label for="email" class="col-3">Email</label>
                <div class="col-6">
                    <input type="email" name="email" id="email" value="{{user.email}}" class="form-control"/>
                </div>
            </div>

            <div class="row flex-nowrap justify-content-center align-items-center form-group mb-3">
                <label for="password" class="col-3">Password</label>
                <div class="col-6">
                    <input type="password" name="password" id="password" value="{{user.password}}" class="form-control"/>
                </div>
            </div>
            <div class="float-end">
                <button type="submit" class="btn btn-outline-success">Valider</button>
            </div>
        </form>

    </div>
</div>
{% endblock %}