{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mt-5 vh-100">
   <div class="row">
        <h1 class="text-center">Erreur 403 : Access denied !</h1>

        {% if app.user %}
            <h4 class="text-center">Vous n'avez pas le droit d'accéder à cette page.</h4>
            {% else %}
            <h4 class="text-center">Vous devez être identifier pour accéder à cette page.</h4>
        {% endif %}
   </div> 
</div>
{% endblock %}
