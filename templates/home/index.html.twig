{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <!-- #Homepage -->
    <div id="homepage">
        <!-- Fullpage image -->
        <div class="container-fluid p-0 position-relative shadow">
            <div class="bg-img">
                <div class="caption">
                    <h1>Bienvenue sur notre site collaboratif</h1>
                    <p>Découvrez, créez, partagez du contenu sur des figures de snowboard.</p>
                </div>
            </div>
        </div><!-- #End Fullpage image -->

        <!-- Tricks Container -->
        <div id="tricks_container" class="container bg-white pt-5">
            <div class="row justify-content-evenly">
                <!-- Example trick card -->
                <div class="card mb-3 col-lg-4 p-0">
                    <img src="/assets/images/mountains.jpg" class="card-img-top" width="100%" height="200px" style="object-fit:cover;"/>
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <h5 class="card-title">Category name</h5>
                        <div>
                            <a href="#" class="btn btn-outline-success py-2 px-3">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger p-2 px-3">
                               <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div><!-- #End Example trick card -->
                
            </div>
        </div><!-- #End Tricks Container -->
        <div class="fixed-bottom desktop-btn d-none" id="go-top">
            <a href="#homepage" type="button" class="btn rounded-circle float-end btn-links">
                <i class="bi bi-arrow-up-circle-fill text-primary"></i>
            </a>
        </div>
        <div class="fixed-bottom desktop-btn" id="go-bottom">
            <a href="#tricks_container" type="button" class="btn rounded-circle float-end btn-links">
                <i class="bi bi-arrow-down-circle-fill text-primary"></i>
            </a>
        </div>
    </div><!-- #End Homepage -->
{% endblock %}
